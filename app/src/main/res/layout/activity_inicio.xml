<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:orientation="vertical"
    android:layout_alignParentLeft="true"
    android:textColor="#FF5722">

    <TextView
        android:id="@+id/Etiqueta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/gridLayout"
        android:layout_marginBottom="14dp"
        android:height="100dp"
        android:textAlignment="textEnd"
        android:textColor="#F5F5F5"
        android:textSize="35dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="end"
        />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center"
        android:columnCount="4"
        android:orientation="horizontal"
        android:padding="0dp"
        android:rowCount="6"
        android:layout_alignParentLeft="true">

        <Button
            android:id="@+id/Type"
            android:layout_margin="2dp"
            android:text="Tri"
            android:textColor="#FF5722" />
        <Button
            android:id="@+id/Pa1"
            android:layout_margin="2dp"
            android:text="("
            android:textColor="#FF5722" />
        <Button
            android:id="@+id/Pa2"
            android:layout_margin="2dp"

            android:text=")"
            android:textColor="#FF5722" />


        <Button
            android:id="@+id/Delete"

            android:layout_margin="2dp"
            android:text="Borrar"
            android:textColor="#FF5722" />

        <Button
            android:id="@+id/Pi"
            android:layout_margin="2dp"
            android:text="ฯ"
            android:textColor="#FF5722" />

        <Button
            android:id="@+id/Divide"
            android:layout_margin="2dp"
            android:text="cos()"
            android:textColor="#FF5722" />

        <Button
            android:id="@+id/Multiplica"
            android:layout_margin="2dp"
            android:text="sen()"
            android:textColor="#FF5722" />


        <Button
            android:id="@+id/Entre"

            android:layout_margin="2dp"
            android:text="รท"
            android:textColor="#FF5722" />

        <Button
            android:id="@+id/Siete"
            android:layout_margin="2dp"

            android:text="7"
            />

        <Button
            android:id="@+id/Ocho"
            android:layout_margin="2dp"

            android:text="8"
              />

        <Button
            android:id="@+id/Nueve"
            android:layout_margin="2dp"

            android:text="9"
             />

        <Button
            android:id="@+id/Por"
            android:layout_margin="2dp"

            android:text="*"
            android:textColor="#FF5722" />

        <Button
            android:id="@+id/Cuatro"
            android:layout_margin="2dp"

            android:text="4"
              />

        <Button
            android:id="@+id/Cinco"
            android:layout_margin="2dp"

            android:text="5"
              />

        <Button
            android:id="@+id/Seis"
            android:layout_margin="2dp"

            android:text="6"
              />

        <Button
            android:id="@+id/Menos"
            android:layout_margin="2dp"
            android:text="-"
            android:textColor="#FF5722" />

        <Button
            android:id="@+id/Uno"
            android:layout_margin="2dp"

            android:text="1"
              />

        <Button
            android:id="@+id/Dos"
            android:layout_margin="2dp"

            android:text="2"
             />

        <Button
            android:id="@+id/Tres"
            android:layout_margin="2dp"
            android:text="3"
              />

        <Button
            android:id="@+id/Mas"
            android:layout_gravity="fill"
            android:layout_margin="2dp"
            android:text="+"
            android:textColor="#FF5722" />
        <Button
            android:id="@+id/i"
            android:layout_gravity="fill"
            android:layout_margin="2dp"
            android:textAllCaps="false"
            android:text="i"
            android:textColor="#FF5722" />

        <Button
            android:id="@+id/Cero"
            android:layout_gravity="fill"
            android:layout_margin="2dp"
            android:text="0"
             />
        <Button
            android:id="@+id/Punto"
            android:layout_gravity="fill"
            android:layout_margin="2dp"
            android:text="."
            />

        <Button
            android:id="@+id/Igual"
            android:layout_margin="2dp"

            android:text="="
            android:textColor="#FF5722" />
         <Button
            android:id="@+id/EXP"
            android:layout_margin="2dp"
             android:textAllCaps="false"
            android:text="e"
            android:textColor="#FF5722" />
        <Button
            android:id="@+id/Mod"
            android:layout_margin="2dp"
            android:text="|z|"
            android:textColor="#FF5722" />
        <Button
            android:id="@+id/Com"
            android:layout_margin="2dp"
            android:text="z'"
            android:textColor="#FF5722" />



        <Button
            android:id="@+id/Hat"

            android:layout_margin="2dp"
            android:text="^"
            android:textColor="#FF5722" />
    </GridLayout>
</RelativeLayout>