<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:orientation="vertical"
    android:layout_alignParentLeft="true"
    android:textColor="#FF5722">

    <TextView
        android:id="@+id/Etiqueta"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="35dp"
        android:padding="10dp"
        android:hint="(x+yi)"
        />
    <TextView
        android:id="@+id/Resultado"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:height="150dp"
        android:padding="10dp"
        android:text=""
        android:textSize="35dp"
        android:scrollbars = "vertical"
        android:textAlignment="textEnd"
        android:textColor="#C6007B"

        android:gravity="end" />
    <GridLayout
        android:id="@+id/Teclado"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:columnCount="4"
        android:orientation="horizontal"
        android:padding="0dp"
        android:rowCount="6"
        android:layout_height="match_parent">
        <Spinner
            android:id="@+id/Type"
            android:layout_height="wrap_content"
            android:layout_columnSpan="4"
            android:spinnerMode="dialog"
            android:padding="2dp"
            />

        <Button
            android:id="@+id/C"
            android:text="C"
            android:textColor="#C60000" />
        <Button
            android:id="@+id/CE"
            android:text="CE"
            />
        <Button
            android:id="@+id/Raiz"
            android:layout_margin="2dp"
            android:text="√"
            android:textColor="#FF5722" />
        <Button
            android:id="@+id/Entre"
            android:layout_margin="2dp"
            android:textAllCaps="false"
            android:text="÷" />
        <Button
            android:id="@+id/Siete"
            android:layout_margin="2dp"
            android:textColor="#FFFF"
            android:background="@color/btn1"
            android:textAllCaps="false"
            android:text="7"
            />
        <Button
            android:id="@+id/Ocho"
            android:layout_margin="2dp"
            android:textColor="#FFFF"
            android:background="@color/btn1"
            android:textAllCaps="false"
            android:text="8"
            />
        <Button
            android:id="@+id/Nueve"
            android:layout_margin="2dp"
            android:textColor="#FFFF"
            android:background="@color/btn1"
            android:textAllCaps="false"
            android:text="9"
            />
        <Button
            android:id="@+id/Por"

            android:layout_margin="2dp"
            android:text="x"
            android:textColor="#FF5722" />
        <Button
            android:id="@+id/Cuatro"
            android:layout_margin="2dp"
            android:textColor="#FFFF"
            android:background="@color/btn1"
            android:text="4"
            android:textAllCaps="false"
            />
        <Button
            android:id="@+id/Cinco"
            android:layout_margin="2dp"
            android:textColor="#FFFF"
            android:background="@color/btn1"
            android:text="5"
            android:textAllCaps="false"
            />
        <Button
            android:id="@+id/Seis"
            android:layout_margin="2dp"
            android:textColor="#FFFF"
            android:background="@color/btn1"
            android:text="6"
            android:textAllCaps="false"
            />
        <Button
            android:id="@+id/Mas"
            android:layout_margin="2dp"
            android:text="+"
            android:textColor="#FF5722" />
        <Button
            android:id="@+id/Uno"
            android:layout_margin="2dp"
            android:textColor="#FFFF"
            android:background="@color/btn1"
            android:text="1"
            android:textAllCaps="false"
            />

        <Button
            android:id="@+id/Dos"
            android:layout_margin="2dp"
            android:textColor="#FFFF"
            android:background="@color/btn1"
            android:text="2"
            android:textAllCaps="false"
            />

        <Button
            android:id="@+id/Tres"
            android:layout_margin="2dp"
            android:textColor="#FFFF"
            android:background="@color/btn1"
            android:text="3"
            android:textAllCaps="false"
            />
        <Button
            android:id="@+id/Menos"
            android:text="-"
            android:layout_margin="2dp"

            android:textColor="#FF5722" />


        <Button
            android:id="@+id/Sh"

            android:layout_margin="2dp"
            android:textAllCaps="false"
            android:text="shift"
            android:textColor="#FF5722" />

        <Button
            android:id="@+id/Cero"
            android:layout_margin="2dp"
            android:textColor="#FFFF"
            android:background="@color/btn1"
            android:text="0"
            android:textAllCaps="false"
            />
        <Button
            android:id="@+id/Punto"

            android:layout_margin="2dp"
            android:text="."
            />
        <Button
            android:id="@+id/Igual"
            android:text="="
            android:layout_margin="2dp"
            android:textColor="#FF5722" />

        <Button
            android:id="@+id/Graph"
            android:layout_width="match_parent"
            android:layout_columnSpan="4"
            android:layout_margin="2dp"
            android:text="Graficar"

            />


    </GridLayout>
</LinearLayout>